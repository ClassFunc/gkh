{
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "exclude": [
    ".tmp/*",
    "./.tmp/*"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,
    "esModuleInterop": true
  }
}